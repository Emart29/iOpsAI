# iOps Backend Production Environment Variables
# These should be set in your hosting platform (Render/Railway) dashboard

# ===========================================
# Core Settings
# ===========================================
DEBUG=false
ENVIRONMENT=production

# ===========================================
# Database (PostgreSQL)
# ===========================================
# This is typically provided automatically by Render/Railway
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# ===========================================
# Security
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-secure-random-key-here

# ===========================================
# AI Integration
# ===========================================
GROQ_API_KEY=your_production_groq_api_key

# ===========================================
# CORS - Frontend URLs
# ===========================================
# Add your Vercel deployment URL and any custom domains
CORS_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# ===========================================
# Frontend URL (for email links)
# ===========================================
FRONTEND_URL=https://your-app.vercel.app

# ===========================================
# Email Service
# ===========================================
RESEND_API_KEY=your_production_resend_api_key
SEND_VERIFICATION_EMAILS=true
EMAIL_FROM=iOps <noreply@your-domain.com>

# ===========================================
# File Storage
# ===========================================
UPLOAD_DIR=./temp_uploads
MAX_FILE_SIZE=52428800

# ===========================================
# Error Monitoring (Sentry)
# ===========================================
# Get your DSN from: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===========================================
# Database Backups
# ===========================================
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
